<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= lang === 'hu' ? 'Fegyverek' : lang === 'ro' ? 'Arme' : 'Weapons' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Air Weapons Section -->
    <section class="parallax-section" style="background-image: url('/pictures/Air_weapons.jpg');">
        <div class="parallax-overlay">
            <div class="container text-center">
                <h2 class="section-title"><%= lang === 'hu' ? 'Légi Fegyverek' : lang === 'ro' ? 'Arme Aeriene' : 'Air Weapons' %></h2>
            </div>
        </div>
    </section>

    <section class="weapons-section">
        <div class="container py-5">
            <div class="row g-4">
                <% weapons.filter(w => w.category === 'air').forEach(weapon => { %>
                    <div class="col-lg-6 col-md-12">
                        <div class="card item-card shadow-lg">
                            <% if(weapon.picture && weapon.picture.includes("https")) { %>
                            <img src="<%= weapon.picture %>" class="card-img-top" alt="<%= weapon.name[lang] %>">
                            <% } else { %>
                            <img src="/pictures/<%= weapon.picture %>" class="card-img-top" alt="<%= weapon.name[lang] %>">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-plane"></i> <%= weapon.name[lang] %></h5>
                                <p class="card-text"><%= weapon.description[lang] %></p>
                                <div class="detail-meta">
                                    <strong><i class="fas fa-list"></i> <%= lang === 'hu' ? 'Típus:' : lang === 'ro' ? 'Tip:' : 'Type:' %></strong> <%= weapon.type[lang] %>
                                </div>
                                <a href="/weapon/<%= weapon.id %>?lang=<%= lang %>" class="btn btn-danger btn-sm">
                                    <%= lang === 'hu' ? 'Megtekintés' : lang === 'ro' ? 'Vezi' : 'View' %> <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Ground Weapons Section -->
    <section class="parallax-section" style="background-image: url('/pictures/Ground_weapons.jpg');">
        <div class="parallax-overlay">
