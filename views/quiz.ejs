<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= lang === 'hu' ? 'Kvíz' : lang === 'ro' ? 'Quiz' : 'Quiz' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main>
        <section class="detail-header">
            <div class="container">
                <h1><i class="fas fa-brain"></i> <%= lang === 'hu' ? 'Kvíz' : lang === 'ro' ? 'Quiz' : 'Quiz' %></h1>
            </div>
        </section>

        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form id="quizForm">
                        <% quiz.questions.forEach((q, index) => { %>
                            <div class="quiz-container">
                                <div style="text-align: center; margin-bottom: 1.5rem;">
                                    <img src="/pictures/<%= q.picture %>" alt="Question <%= index + 1 %>" style="max-width: 100%; height: 250px; object-fit: cover; border-radius: 12px; border: 2px solid var(--accent-color);">
                                </div>
                                <div class="question">
                                    <h3><i class="fas fa-question-circle"></i> <%= q.question[lang] %></h3>
                                    <% q.options.forEach((opt, optIndex) => { %>
                                        <label>
                                            <input type="radio" name="q<%= index %>" value="<%= optIndex %>" required>
                                            <span><%= opt[lang] %></span>
                                        </label>
                                    <% }); %>
                                </div>
                            </div>
                        <% }); %>
                        <div class="text-center mt-4">
                            <button type="button" onclick="submitQuiz()" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> <%= lang === 'hu' ? 'Beküldés' : lang === 'ro' ? 'Trimite' : 'Submit' %>
                            </button>
                        </div>
                    </form>
                    
                    <div id="result" style="display: none;">
                        <div class="alert alert-success text-center py-4" role="alert">
                            <h2><i class="fas fa-trophy"></i> <%= lang === 'hu' ? 'Eredmény' : lang === 'ro' ? 'Rezultat' : 'Result' %>:</h2>
                            <div style="font-size: 3rem; color: var(--accent-color); font-weight: 900; margin: 1rem 0;" id="score"></div>
                            <a href="/quiz?lang=<%= lang %>" class="btn btn-primary mt-3">
                                <i class="fas fa-redo"></i> <%= lang === 'hu' ? 'Újra próbálni' : lang === 'ro' ? 'Încearcă din nou' : 'Try Again' %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-4 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2026 WWII History</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="application/json" id="quiz-data">
<%= JSON.stringify(quiz.questions.map(q => q.answer)) %>
    </script>
    <script>
        const answers = JSON.parse(document.getElementById('quiz-data').textContent);
        function submitQuiz() {
            const form = document.getElementById('quizForm');
            const resultDiv = document.getElementById('result');
            const scoreSpan = document.getElementById('score');
            let score = 0;

            answers.forEach((answer, index) => {
                const selected = form.elements['q' + index];
                if (selected.value == answer) {
                    score++;
                }
            });

            scoreSpan.textContent = score + '/' + answers.length;
            resultDiv.style.display = 'block';
            document.getElementById('quizForm').style.display = 'none';
        }
    </script>
</body>
</html>